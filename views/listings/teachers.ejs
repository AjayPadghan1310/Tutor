<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teachers</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        /* background: linear-gradient(120deg, #1c2529, #a1d1b1); */
        background-size: 400% 400%;
        animation: gradientBackground 10s ease infinite;
      }

      h1 {
        font-weight: 700;
        font-size: 3rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        animation: fadeInDown 1.5s ease-out;
      }

      .teacher-card {
        margin: 10px auto;
        box-shadow: 0 8px 20px rgba(242, 227, 227, 0.3);
        border-radius: 15px;
        overflow: hidden;
        background-color: #e9e3e3;
        color: #000000;
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        opacity: 0;
        animation: fadeInUp 1s ease-in-out forwards;
        width: 100%;
      }

      .teacher-card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
      }

      .card-img-top {
        max-height: 250px;
        object-fit: cover;
        transition: transform 0.5s ease;
      }

      .teacher-card:hover .card-img-top {
        transform: scale(1.1);
      }

      .row > div {
        flex: 1 0 33.33%;
        max-width: 33.33%;
      }

      .learn-more-btn {
        display: inline-block;
        padding: 10px 25px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        border: none;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.4s ease;
        box-shadow: 0 8px 16px rgba(255, 75, 43, 0.3);
      }

      .learn-more-btn:hover {
        background: linear-gradient(135deg, #ff6a00, #ee0979);
        transform: translateY(-3px) scale(1.03);
        box-shadow: 0 12px 24px rgba(238, 9, 121, 0.4);
      }

      @keyframes fadeInUp {
        from {
          transform: translateY(20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes fadeInDown {
        from {
          transform: translateY(-20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes gradientBackground {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Meet Our Tutors</h1>
      <div class="row">
        <% teacher.forEach(function(teacher) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card teacher-card">
            <img
              src="<%= teacher.photoUrl %>"
              class="card-img-top"
              alt="<%= teacher.name %>"
            />
            <br /><br />
            <div class="card-body text-center">
              <h5 class="card-title"><%= teacher.name %></h5>
              <p class="card-text">Subject: <%= teacher.subject %></p>
              <p class="card-text">
                Experience: <%= teacher.experience %> years
              </p>
              <p class="card-text">Contact: <%= teacher.email %></p>
              <a href="/tuter/<%= teacher._id %>" class="learn-more-btn"
                >Learn More</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
